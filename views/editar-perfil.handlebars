<main class="contenedor">
     <form action="/editar-perfil" class="default-form" method="POST" enctype="multipart/form-data">
          <div class="campo">
               <label>Nombre</label>
               <input value={{usuario.nombre}} type="text" name="nombre" placeholder="Tu nombre">
          </div>
          <div class="campo">
               <label>Email</label>
               <input value={{usuario.email}} type="email" name="email" placeholder="Tu correo eletrónico">
          </div>
          <div class="campo">
               <label>Contraseña</label>
               <input type="password" name="password" placeholder="Tu contraseña">
          </div>
          <div class="campo">
               <label>Imagen</label>
               <input type="file" name="imagen" placeholder="Tu imagen de perfil">
               <img src="uploads/perfiles/{{usuario.imagen}}" class="admin-perfil" alt="">
          </div>
          <div class="campo">
               <input type="submit" class="btn btn-azul" value="Guardar cambios">
          </div>
     </form>
</main>
